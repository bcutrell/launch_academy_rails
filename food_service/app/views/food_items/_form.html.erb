<%= simple_form_for @food_item, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Food Item</legend>

    <%= f.input :title %>
        <%= f.input :description %>
    <%= f.input :quantity %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', food_items_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>