<%= simple_form_for @estate, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <legend><%= controller.action_name.capitalize %> Estate</legend>

    <%= f.input :street_address %>
    <%= f.input :city %>
    <%= f.input :state, collection: Estate.states %>
    <%= f.input :postal_code %>
    <%= f.input :description %>

    <%- if @owners.present? -%>
      <%= f.association :owner, label_method: :last_name %>
    <% end %>

  <div class="form-actions">
    <%= f.submit 'Record Estate', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', estates_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>

